    fixed_rotation="0" 
    is_bullet="1" 
    linear_damping="0"
    auto_clean="1"
    on_death_leave_physics_body="0"
  ></PhysicsBodyComponent>
  
  <PhysicsImageShapeComponent 
    body_id="1"
	centered="1"
	offset_y="1"
