    _tags="enabled_in_world"
    lifetime="-1"
    penetrate_entities="1"
    damage="0.0"
    do_moveto_update="1"
  ></ProjectileComponent>

  <VelocityComponent
	_tags="enabled_in_world"
    affect_physics_bodies="1"
	>
  </VelocityComponent>
  
	<DamageModelComponent 
		air_needed="0" 
		blood_material="" 
